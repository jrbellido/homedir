[alias]
	br = branch
	c = commit
	ci = commit
	co = checkout
	lg = log --pretty=oneline --abbrev-commit --graph --decorate --all
	pur = pull --rebase
	ri = rebase --interactive --autosquash
	rv = remote -v
	st = status -s -u
	stg = status -uno
	who = shortlog -s --
